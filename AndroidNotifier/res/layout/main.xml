<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

  <ScrollView
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_weight="1"
      android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

      <!-- Test notification -->
      <TextView android:text="@string/testing_title"
                android:background="#444444"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

      <LinearLayout android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
        <Button android:text="@string/send_test_notification"
                android:id="@+id/send_test_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
      </LinearLayout>

      <!-- Service status -->
      <TextView android:text="@string/service_status_unknown"
                android:id="@+id/service_status"
                android:background="#444444"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

      <Button android:text="@string/stop_service"
              android:id="@+id/toggle_service"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
      <CheckBox android:text="@string/start_at_boot"
                android:id="@+id/start_at_boot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />

      <!-- Notification methods -->
      <TextView android:text="@string/methods_title"
                android:background="#444444"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

      <CheckBox android:text="@string/method_wifi"
                android:id="@+id/method_wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
      <CheckBox android:text="@string/method_bluetooth"
                android:id="@+id/method_bluetooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
      <CheckBox android:text="@string/method_usb"
                android:id="@+id/method_usb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:checked="false" />

      <!-- Notification events -->
      <TextView android:text="@string/events_title"
                android:background="#444444"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

      <CheckBox android:text="@string/event_ring"
                android:id="@+id/event_ring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
      <CheckBox android:text="@string/event_sms"
                android:id="@+id/event_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
      <CheckBox android:text="@string/event_mms"
                android:id="@+id/event_mms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
      <CheckBox android:text="@string/event_battery"
                android:id="@+id/event_battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />

    </LinearLayout>

  </ScrollView>

  <LinearLayout
      android:orientation="horizontal"
      android:layout_height="wrap_content"
      android:layout_width="fill_parent"
      style="@android:style/ButtonBar">

    <Button android:text="@string/save_settings"
            android:id="@+id/save_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    <Button android:text="@string/revert_settings"
            android:id="@+id/revert_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

  </LinearLayout>

</LinearLayout>
